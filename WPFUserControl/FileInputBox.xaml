<UserControl x:Class="WPFUserControl.FileInputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFUserControl"
             mc:Ignorable="d">
    <DockPanel>
        <Button x:Name="button" Content="Browse..." DockPanel.Dock="Right" Click="button_Click" />
        <TextBox x:Name="textBox" MinWidth="{Binding ActualWidth, ElementName=button}" Margin="0,0,2,0" Width="153" TextChanged="textBox_TextChanged"/>
    </DockPanel>
</UserControl>
